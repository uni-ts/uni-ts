{
  "name": "uni-ts",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/uni-ts/uni-ts.git"
  },
  "author": "Konrad Szwarc <konrad.szwarc.dev@gmail.com> (https://github.com/KonradSzwarc)",
  "homepage": "https://github.com/uni-ts/uni-ts#readme",
  "bugs": "https://github.com/uni-ts/uni-ts/issues",
  "type": "module",
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "build": "tsc -b",
    "check": "biome check --write",
    "check:ci": "biome ci .",
    "test": "vitest",
    "test:cov": "vitest --coverage",
    "clean": "rimraf -g \"packages/*/{dist,tsconfig.tsbuildinfo}\" \"tsconfig.tsbuildinfo\"",
    "typedoc": "typedoc",
    "docs:dev": "typedoc && vitepress dev docs",
    "docs:build": "typedoc && vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@changesets/cli": "2.29.5",
    "@shikijs/vitepress-twoslash": "3.9.2",
    "@types/node": "24.2.1",
    "@vitest/coverage-v8": "3.2.4",
    "rimraf": "6.0.1",
    "typedoc": "0.28.9",
    "typedoc-plugin-markdown": "4.8.0",
    "typedoc-vitepress-theme": "1.1.2",
    "typescript": "5.9.2",
    "vitepress": "2.0.0-alpha.9",
    "vitest": "3.2.4",
    "zod": "4.0.14"
  }
}
